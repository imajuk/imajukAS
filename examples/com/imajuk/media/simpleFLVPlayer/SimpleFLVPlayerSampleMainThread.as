package com.imajuk.media.simpleFLVPlayer{    import com.imajuk.service.PreLoader;	import com.imajuk.service.PreLoaderThread;	import flash.net.URLRequest;	import com.imajuk.service.AssetLocation;	import com.imajuk.service.IAssetLocation;	import flash.display.DisplayObjectContainer;    import org.libspark.thread.Thread;    /**     * @author shin.yamaharu     */    public class SimpleFLVPlayerSampleMainThread extends Thread     {        private var timeline:DisplayObjectContainer;        private var videoView:SimpleFLVPlayerWithUI;        private var asset:DisplayObjectContainer;        public function SimpleFLVPlayerSampleMainThread(timeline:DisplayObjectContainer)        {            super();            this.timeline = timeline;        }        override protected function run():void        {        	var a:IAssetLocation = new AssetLocation();        	a.add(new URLRequest("film.swf"), function(d:DisplayObjectContainer):void        	{        		asset = d;        	});        	        	var t:Thread = new PreLoaderThread(new PreLoader(), a);        	t.start();        	t.join();        	    		next(build);        }                private function build():void        {        	videoView = timeline.addChild(new SimpleFLVPlayerWithUI(asset, ["09ss_2_high.flv"])) as SimpleFLVPlayerWithUI;//        	videoView = timeline.addChild(new LyriVideo(asset, ["http://test.sohosq.com.cn/regenerist/video/09ss_2_high.flv"])) as LyriVideo;            videoView.showMovie(0);        }        override protected function finalize():void        {        }    }}