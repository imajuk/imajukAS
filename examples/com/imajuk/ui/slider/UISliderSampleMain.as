package com.imajuk.ui.slider {
    import com.imajuk.constructions.DocumentClass;    import com.imajuk.logs.Logger;    import com.imajuk.ui.UIType;    import flash.display.StageQuality;    import org.libspark.thread.EnterFrameThreadExecutor;    import org.libspark.thread.Thread;    /**     * @author shinyamaharu     */    public class UISliderSampleMain extends DocumentClass     {        public function UISliderSampleMain()        {            super(StageQuality.HIGH);                        //TODO アロー付きスライダーのサンプルを作る                        Thread.initialize(new EnterFrameThreadExecutor());                        Logger.filter(Logger.DEBUG, Logger.INFO);            Logger.release("UISliderSampleMain");        }        override protected function start() : void        {        	minimam(20,20);        	minimam2(30,20);        };        private function minimam(x : int, y : int) : void         {            var slider:UISlider = new UISlider(this, Bar, BarBG);            slider.x = x;            slider.y = y;            slider.size = 200;            slider.barSize = 20;
            slider.bar_bg_margin = 5;
        }                private function minimam2(x : int, y : int) : void         {            var slider:UISlider = new UISlider(this);            slider.x = x;            slider.y = y;            slider.size = 200;            slider.barSize = 20;            slider.bar_bg_margin = 5;            slider.direction = UIType.HORIZONAL;        }
    }}import flash.display.BitmapData;import com.imajuk.ui.IUIView;import com.imajuk.ui.scroll.view.Bar;class Bar extends com.imajuk.ui.scroll.view.Bar implements IUIView{    override public function set externalHeight(value : int) : void    {        graphics.clear();                var b:BitmapData = new BitmapData(2, 2, false, 0x5555CC);        b.setPixel(0, 0, 0xFFCCCCFF);        b.setPixel(1, 0, 0xFFCCCCFF);        graphics.beginBitmapFill(b);        graphics.drawRect(-3, 0, 6, value);    }}class BarBG extends com.imajuk.ui.scroll.view.Bar implements IUIView{    override public function set externalHeight(value : int) : void    {        graphics.clear();        var b:BitmapData = new BitmapData(2, 2, true, 0);        b.setPixel32(0, 0, 0xFFCCCCFF);        b.setPixel32(1, 1, 0xFFCCCCFF);        graphics.beginBitmapFill(b);        graphics.drawRect(-4, 0, 8, value);    }}