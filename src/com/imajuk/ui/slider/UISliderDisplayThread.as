package com.imajuk.ui.slider{    import com.imajuk.logs.Logger;    import com.imajuk.threads.ThreadUtil;    import com.imajuk.utils.DisplayObjectUtil;    import flash.display.DisplayObject;    import flash.display.DisplayObjectContainer;    import org.libspark.thread.Thread;    /**     * @author shinyamaharu     */    public class UISliderDisplayThread extends Thread     {        private var container : DisplayObjectContainer;        private var displayObject : DisplayObject;        public function UISliderDisplayThread(container:DisplayObjectContainer, displayObject:DisplayObject)        {            super();            this.displayObject = displayObject;            this.container = container;        }        override protected function run() : void        {        	container.addChild(displayObject);        	ThreadUtil.infinityLoop();        }        override protected function finalize() : void        {        	DisplayObjectUtil.removeChild(displayObject);        	Logger.debug(this);        }    }}