package com.imajuk.ui.combobox{    import org.libspark.thread.Thread;    /**     * @author shinyamaharu     */    public class ComboBoxLayoutItemThread extends Thread     {        private var items : Array;        public function ComboBoxLayoutItemThread(items:Array)        {            super();            this.items = items;        }        override protected function run() : void        {        	var y:Number = 0;            items.forEach(                function(item:ComboBoxItemViewContainer, ...param):void                {                	item.y = y;                	y += (item.itemView is ComboBox) ? ComboBox(item.itemView).currentHeight : item.externalHeight;                }            );            next(run);        }        override protected function finalize() : void        {        }    }}