package com.imajuk.utils {
	/**     * <code>StageRefercen</code>の<code>Error</code>クラス.     *      * @author yamaharu     */    public class StageReferenceError extends Error     {        //--------------------------------------------------------------------------        //        //  Constructor        //        //--------------------------------------------------------------------------        public function StageReferenceError(id:int)        {            super(getMessage(id), id);        }	    //--------------------------------------------------------------------------	    //	    //  Methods: 	    //	    //--------------------------------------------------------------------------	    /**	     * @private	     */        private function getMessage(id:int):String        {            var m:String = "存在しないエラーID";            switch(id)            {                case 0:                {                    m = "StageReferenceは初期化されていません。\n（stageプロパティを使用する前に、一度だけinitialize(DisplayObject)を呼び出す必要があります。）\n";                    break;                }                case 1:                {                    m = "初期化にはDisplayObjectを渡す必要があります";                    break;                }                case 2:                {                    m = "initializeメソッドに渡すdisplayObjectは表示リストに含まれている必要があります。";                }            }            return m;        }    }
}
