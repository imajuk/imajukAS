package com.imajuk.spray{	    import fl.motion.easing.Quadratic;    import com.imajuk.motion.TweensyThread;    import org.libspark.thread.Thread;    /**     * @author shinyamaharu     */    public class BrushSizeChangeThread extends Thread     {        private var spray : Spray;        private var duration : Number;        public function BrushSizeChangeThread(spray : Spray, duration : Number)        {            super();            this.spray = spray;            this.duration = duration;        }        override protected function run() : void        {            next(exec1);        }        private function exec1() : void        {            var t : Thread = new TweensyThread(spray, 0, duration * .5, Quadratic.easeInOut, null, {brushSize:120});            t.start();            t.join();        	            next(exec2);        }        private function exec2() : void        {            var t : Thread = new TweensyThread(spray, 0, duration * .5, Quadratic.easeInOut, null, {brushSize:70});            t.start();            t.join();        	            next(exec1);        }        override protected function finalize() : void        {        }    }}