package com.imajuk.data {
	import com.imajuk.data.IIterator;	/**     * 配列を走査するイテレータ.     *      * <p>A iterator that iterates Array.</p>     *      * @author	yamaharu     * @see		IIterator     */    public class ArrayIterator implements IIterator     {        //--------------------------------------------------------------------------        //        //  Constructor        //        //--------------------------------------------------------------------------                /**         * コンストラクタ.         *          * <p>走査したい<code>Array</code>を渡します.</p>         * <p>set iterated Array</p>         *          * @param array	走査したい<code>Array</code>.         * 				<p>iterated <code>Array</code></p>         */        public function ArrayIterator(array:Array)         {            _position = 0;            myArray = array;        }	        //--------------------------------------------------------------------------        //        //  Variables        //        //--------------------------------------------------------------------------                /**         * @private         */        protected var myArray:Array;        //--------------------------------------------------------------------------        //        //  properties        //        //--------------------------------------------------------------------------                /**         * @private         */        protected var _position:int;        /**         * @copy IIterator#position         */        public function get position():int        {            return _position;        }        public function set position(value : int) : void        {            _position = value;        }        //--------------------------------------------------------------------------        //        //  Methods: discription        //        //--------------------------------------------------------------------------                /**         * まだイテレートする対象があるかどうかを返します.         *          * <p>Returns whether component has a next iterated object.</p>         */        public function hasNext():Boolean        {            return _position < myArray.length;        }	        /**         * イテレーションの次の対象を返します.         *          * <p>Returns a next iterated object.</p>         */        public function next():*        {            return myArray[_position ++];        }
        
        public function clone():ArrayIterator
        {            return new ArrayIterator(myArray.concat());        }    }
}
