package com.imajuk.threads{    import org.libspark.thread.Thread;    /**     * 一定時間待って依頼人をkillするThread     * @author yamaharu     */    public class TimeKeeperThread extends Thread    {        private var duration : Number;        private var client : Thread;        public function TimeKeeperThread(client : Thread, duration : Number)        {            super();            this.client = client;            this.duration = duration;        }        override protected function run() : void        {            sleep(duration);            next(doJob);        }        private function doJob() : void        {            client.interrupt();        }    }}