package com.imajuk.threads{    import org.libspark.thread.Thread;    /**     * @author shinyamaharu     */    public class TimeoutThread extends Thread     {        private var time : uint;                public function TimeoutThread(time:uint)        {            super();            this.time = time;        }        override protected function run() : void        {        	if (isInterrupted) return;        	interrupted(function():void{});        	        	wait(time);        }        override protected function finalize() : void        {        }    }}