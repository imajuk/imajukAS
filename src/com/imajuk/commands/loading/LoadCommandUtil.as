package com.imajuk.commands.loading {
	import flash.events.HTTPStatusEvent;		import flash.events.IOErrorEvent;		import flash.events.ProgressEvent;		import flash.events.IEventDispatcher;			/**     * @private     * @author yamaharu     */    public class LoadCommandUtil     {        public static function relayCommonEvent(dispatcher:IEventDispatcher, listener:IEventDispatcher):void        {            dispatcher.addEventListener(ProgressEvent.PROGRESS, listener.dispatchEvent);             dispatcher.addEventListener(IOErrorEvent.IO_ERROR, listener.dispatchEvent);             dispatcher.addEventListener(HTTPStatusEvent.HTTP_STATUS, listener.dispatchEvent);        }        public static function killRelayCommonEvent(dispatcher : IEventDispatcher, listener : IEventDispatcher) : void        {        	dispatcher.removeEventListener(ProgressEvent.PROGRESS, listener.dispatchEvent);             dispatcher.removeEventListener(IOErrorEvent.IO_ERROR, listener.dispatchEvent);             dispatcher.removeEventListener(HTTPStatusEvent.HTTP_STATUS, listener.dispatchEvent);        }    }
}
