package com.imajuk.graphics{    import com.imajuk.utils.DisplayObjectUtil;    import flash.display.DisplayObject;    import flash.geom.Point;    import flash.geom.Rectangle;    /**
     * @author yamaharu
     */    public class AlignT extends AbstractAlignAction implements IALignAction    {        override public function execute(target : DisplayObject, coordinateSpace : AlignCoordinateSpace, aplyDirection : String = Align.BOTH) : void        {            var coordinatePos  : Point = DisplayObjectUtil.getGlobalPosition(coordinateSpace.container),                coordinateSize : Rectangle = getSpaceSize(target, coordinateSpace),                r              : Rectangle = DisplayObjectUtil.getPixelBounce(target),                x              : Number = coordinatePos.x + (coordinateSize.width - r.width) * .5 + offH,                y              : Number = coordinatePos.y + offV;            super.align(target, aplyDirection, x, y);                    }        public function toString() : String        {            return "com.imajuk.graphics::AlignT";        }    }}
