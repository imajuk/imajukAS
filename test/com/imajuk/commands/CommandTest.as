package com.imajuk.commands{	import flash.events.Event;		import flash.display.*;

	import org.libspark.as3unit.after;	import org.libspark.as3unit.assert.*;	import org.libspark.as3unit.before;	import org.libspark.as3unit.test;	use namespace test;	use namespace before;	use namespace after;	internal class CommandTest extends Sprite	{		test function complete () : void		{			var c : int = 0;			var cmd : Command = new Command(function():void			{				c ++;			});			assertFalse(cmd.isCompleted);						cmd.addEventListener(Event.COMPLETE, async(function():void			{				assertEquals(1, c);				assertTrue(cmd.isCompleted);			}, 300));			cmd.execute();		}				test function clone():void		{			var c : int = 0;			var cmd : Command = new Command(function(arg:Number):void			{				c += arg;			}, 10);			cmd = cmd.clone() as Command;						cmd.addEventListener(Event.COMPLETE, async(function():void			{				assertEquals(10, c);			}, 300));			cmd.execute();		}	}}