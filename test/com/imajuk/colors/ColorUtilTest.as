package com.imajuk.colors{    import com.imajuk.color.ColorUtil;    import org.libspark.as3unit.after;    import org.libspark.as3unit.assert.*;    import org.libspark.as3unit.before;    import org.libspark.as3unit.test;    import flash.display.*;	use namespace test;	use namespace before;	use namespace after;    	internal class ColorUtilTest extends Sprite	{		before function setupSample () : void		{		}		        test function getARGBFromSeparatedElements () : void        {            assertEquals(0, ColorUtil.getARGBFromSeparatedElements(0, 0, 0, 0));            assertEquals(0xffffffff, ColorUtil.getARGBFromSeparatedElements(255, 255, 255, 255));            assertEquals(0xffff0000, ColorUtil.getARGBFromSeparatedElements(255, 0, 0, 255));                        //Aなし            assertEquals(0, ColorUtil.getARGBFromSeparatedElements(0, 0, 0));            assertEquals(0xffffff, ColorUtil.getARGBFromSeparatedElements(255, 255, 255));            assertEquals(0xff0000, ColorUtil.getARGBFromSeparatedElements(255, 0, 0));        }                test function RGBToFormattedStrings():void        {            assertEquals("ff0000", ColorUtil.RGBToFormattedStrings(0xaaff0000));        }                test function hsvToRGB () : void        {            assertEquals(0x285413.toString(16), ColorUtil.hsvToRGB(100, 77, 33).toString(16));            assertEquals(0x541313.toString(16), ColorUtil.hsvToRGB(0, 77, 33).toString(16));            assertEquals(0x541313.toString(16), ColorUtil.hsvToRGB(360, 77, 33).toString(16));        }                test function hsvToARGB () : void        {            assertEquals(0xFF285413.toString(16), ColorUtil.hsvToARGB(100, 77, 33, 1).toString(16));            assertEquals(0x00285413.toString(16), ColorUtil.hsvToARGB(100, 77, 33, 0).toString(16));        }		after function teardownSample () : void		{		}	}}